/dts-v1/;
/ {
  #address-cells = <1>;
  #size-cells = <1>;
  model="harihitode,ladybird";

  chosen {
    bootargs = "console=ttyS0 ro root=/dev/vda";
    stdout-path = &serial0;
  };

  cpus {
    #address-cells = <1>;
    #size-cells = <0>;
    timebase-frequency = <10000000>;

    cpu0: cpu@0 {
      device_type = "cpu";
      i-cache-size = <32768>;
      d-cache-size = <32768>;
      compatible = "riscv";
      mmu-type = "riscv,sv32";
      clock-frequency = <100000000>;
      reg = <0>;
      riscv,isa = "rv32imac";
      status = "okay";
      cpu0_intc: interrupt-controller {
        #interrupt-cells = <1>;
        compatible = "riscv,cpu-intc";
        interrupt-controller;
      };
    };
  };

  memory0: memory@80000000 {
    device_type = "memory";
    #address-cells = <1>;
    #size-cells = <1>;
    reg = <0x80000000 0x08000000>;
  };

  plic0: interrupt-controller@c000000 {
    #interrupt-cells = <1>;
    compatible = "riscv,plic0";
    interrupt-controller;
    interrupts-extended = <&cpu0_intc 11 &cpu0_intc 9>;
    riscv,ndev=<10>;
    reg = <0x0c000000 0x02000000>;
  };

  mtimer0: mtimer@2000000 {
    compatible = "riscv,aclint-mtimer";
    interrupts-extended = <&cpu0_intc 7>;
    reg = <0x02000000 0x8 0x02007ff8 0x8>;
  };

  mswi0: mswi@2008000 {
    #interrupt-cells = <1>;
    compatible = "riscv,aclint-mswi";
    reg = <0x02008000 0x8>;
    interrupts-extended = <&cpu0_intc 3>;
    interrupt-controller;
  };

  serial0: serial@10000000 {
    clock-frequency = <100000000>;
    compatible = "ns16550a";
    current-speed = <115200>;
    device_type = "serial";
    interrupt-parent = <&plic0>;
    interrupts = <10>;
    reg = <0x10000000 0x1000>;
    reg-shift = <0>;
  };

  virtio0: virtio@10001000 {
    compatible = "virtio,mmio";
    interrupt-parent = <&plic0>;
    interrupts = <1>;
    reg = <0x10001000 0x1000>;
  };

  htif {
    compatible = "ucb,htif0";
  };
};
